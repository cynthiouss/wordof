  <div class="banner firstbanner">
    <div class='container'>
      <div class='row'>
        <div class='col-sm-offset-2 col-xs-12 bannerup'>
          <h1>DON'T LOOK FOR IT, JUST FIND IT</h1><br>
          <p>Find a reliable service provider based on community's recommendations</p><br><br>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-offset-2 col-xs-12 bannerdown form-section">
          <div class = 'search-criteria'>
            <%= form_tag('search', method: :get, style: 'display: inline-flex') do %>
              <select class='form-control' name="category">
              <% @categories.each do |category| %>
                <%= options_for_select([category.name]) %>
              <% end %>
              </select>
              <select class='form-control' name="specialty">
              <% @specialties.each do |specialty| %>
                <%= options_for_select([[specialty.name, {:class => specialty.category.name }]]) %>
              <% end %>
              </select>
              <select class='form-control' name="city">
              <% @users.map(&:city).uniq.each do |city| %>
                <%= options_for_select([city]) %>
              <% end %>
              </select>
              <select class='form-control' name="city">
              <% @professionals.map(&:languages).uniq.each do |languages| %>
                <%= options_for_select([languages]) %>
              <% end %>
              </select>
              <br><button class="btn btn-primary">Search</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
