<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Create your profile as a service provider</h1>
    <div class="col-md-5">
      <div class="form-box">
        <%= simple_form_for(@professional, html: { class: 'form-horizontal' }) do |f| %>
          <%= f.input :user_id, placeholder: @current_user.id %>
          <%= f.input :category, placeholder: "Doctor/Lawyer/Handyman" %>
          <%= f.input :specialty, placeholder: "Dentist/Divorce/Plumber" %>
          <%= f.input :languages, placeholder: "English, French, German" %>
          <%= f.input :address, placeholder: "Avenue Louise 6, 1000" %>
          <%= f.input :specialty, placeholder: "Dentist/Divorce/Plumber" %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
