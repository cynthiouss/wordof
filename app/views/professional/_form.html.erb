<div class="form-box">
  <%= simple_form_for(professional, :url => user_professional_index_path) do |f| %>
    <%#= p.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
    <%= f.simple_fields_for :specialty do |s| %>
      <%= s.input :category_id, collection: Category.all, prompt: "Select your profession", required: true %>
      <%= s.input :specialty_id, label: "Specialising in", collection: Specialty.all, prompt: "Select your specialisation", required: true %>
    <% end %>
    <%= f.input :description, placeholder: "Provide a short description of your services and experience", required: true %>
    <%= f.input :languages, collection: [ "English", "French", "Dutch", "German"], prompt: "Select your spoken language(s)", required: true %>
    <%= f.input :address, placeholder: "Avenue Louise 6, 1000", required: true %>
    <%= f.input :phone, placeholder: "02 217 83 45", required: true %>
    <%= f.input :prof_email, label: "Professional email", placeholder: "max@maxco.com", required: true %>
    <%= f.input :recommended_by, :as => :hidden, :input_html => { :value => 0 } %>
    <%= f.button :submit, "Create profile" %>
  <% end %>
</div>
