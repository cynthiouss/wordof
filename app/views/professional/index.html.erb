
<div class="container">
  <div class="page-header">
      <h1>Pick among our trusted professionals</h1><br>
  </div>

  <div class="row active-with-click">
    <% @professionals.each do |professional| %>
    <div class="col-md-4 col-sm-6 col-xs-12">
      <article class="material-card Deep-Orange">
        <h2>
          <span><%= professional.user.name %></span>
          <strong>
            <i class="fa fa-bookmark"></i>
            <%= professional.specialty.category.name %> - <%= professional.specialty.name %>
          </strong>
        </h2>
        <div class="mc-content">
          <div class="img-container">
            <img class="img-responsive" src=<%= professional.user.picture.url(:bright_face) %>>
          </div>
          <div class="mc-description">
            <%= professional.description %>
          </div>
        </div>
        <a class="mc-btn-action">
          <i class="fa fa-bars"></i>
        </a>
        <div class="mc-footer">
          <a class="fa fa-fw fa-mobile" href="tel:<%= professional.phone %> "></a>
          <a class="fa fa-fw fa-envelope" href="mailto:<%= professional.prof_email %>"></a>
          <a class="fa fa-fw fa-map-marker" href=""></a>
          <a class="fa fa-fw fa-info" href=""></a>
        </div>
      </article>
    </div>
  <% end %>
  </div>
</div>

<script src="javascript.js"></script>
