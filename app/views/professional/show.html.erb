<div class="container" style="margin-top: 85px">

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <div class="profile_pic">
        <%= cl_image_tag @professional.user.picture.url(:bright_face) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <h3><%= @professional.user.name %></h3>
      <h4><%= @professional.category%> - <%= @professional.specialty%></h4>
      <h4>Recommended by <%= @professional.recommended_by %> users</h4>
      <br>
      <p>Speaks <%= @professional.languages%></p>
      <p>Located at <%= @professional.address%></p>
      <p>Contact at <%= @professional.phone%> or <%= @professional.prof_email%></p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
