<div class='container-fluid devise'>
  <div class='row'>
    <div class='col-sm-offset-3 col-sm-4 position'>
      <h2 id='title'>Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, placeholder: @user.name, required: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :city, collection: [ "Brussels", "Antwerp", "Ghent", "Paris"], prompt: "Select your city", required: true%>
          <%= f.input :picture, placeholder: @user.picture, required: true %>
          <%= f.input :picture_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create an account" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
