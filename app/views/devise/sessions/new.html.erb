<div class='container-fluid signtitle'>
  <div class='row'>
    <div class='col-sm-offset-5 col-sm-4'>
      <h2>Log in</h2>
    </div>
  </div>
</div>
<div class='container-fluid devise'>
  <div class='row'>
    <div class='col-sm-offset-3 col-sm-4 position'>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text">
          <%= f.button :submit, "Log in" %>
        </div><br>
      <% end %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text' %>
    </div>
  </div>
</div>

