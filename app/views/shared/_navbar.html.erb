<div class="navbar-wagon navbar-wagon-fixed">
  <div class='navbar-wordof-left'>
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= cl_image_tag("wordof/wordof.png") %>
    <% end %>

  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- WHEN LOGGED IN -->

      <!-- Profile picture and dropdown -->

      <!-- How it works -->
      <%= link_to t(".sign_in", default: "How it works"), root_path, class: "navbar-wagon-item navbar-wagon-link navbar-space slow-scroll" %> <!-- To add id: 'scroll' does not work... So for now, it only returns to the home page-->

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "About us"), "#", class: "navbar-wagon-item navbar-wagon-link navbar-space" %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <a class='dropdown-toggle' data-toggle='dropdown'>
            <%#= image_tag "http://res.cloudinary.com/cynthiouss/image/upload/c_scale,w_200/v1459861816/face_10.jpg", class: "avatar", id: "navbar-wagon-menu" %>
            <%= image_tag current_user.picture, class: "avatar", id: "navbar-wagon-menu" %>
          </a>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user.id) do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Saved" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i> <%= t ".profile", default: "My recommendations" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% elsif current_page?(:controller => 'devise/sessions', :action => 'new') %>

    <!-- How it works -->
      <%= link_to t(".sign_in", default: "How it works"), root_path, class: "slow-scroll navbar-wagon-item navbar-wagon-link navbar-space" %> <!-- To add id: 'scroll' does not work... So for now, it only returns to the home page-->

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "About us"), "#", class: "navbar-wagon-item navbar-wagon-link navbar-space" %>

      <!-- Sign up text -->
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <%# elsif current_page?(:controller => 'devise/registrations', :action => 'new') %>

    <% elsif controller_name == 'registrations' %>

      <%= link_to t(".sign_in", default: "How it works"), root_path, class: "slow-scroll navbar-wagon-item navbar-wagon-link navbar-space" %> <!-- To add id: 'scroll' does not work... So for now, it only returns to the home page-->

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "About us"), "#", class: "navbar-wagon-item navbar-wagon-link navbar-space" %>

      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn navbar-space" %>

    <% elsif current_page?(:controller => 'devise/passwords', :action => 'new') %>

      <%= link_to t(".sign_in", default: "How it works"), root_path, class: "slow-scroll navbar-wagon-item navbar-wagon-link navbar-space" %> <!-- To add id: 'scroll' does not work... So for now, it only returns to the home page-->

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "About us"), "#", class: "navbar-wagon-item navbar-wagon-link navbar-space" %>

      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn navbar-space" %>

    <% else %>

      <!-- How it works -->
      <a href="#scroll" class="slow-scroll navbar-wagon-item navbar-wagon-link navbar-space">How it works</a>

      <!-- Button (call-to-action) -->
      <%= link_to t(".top_call_to_action", default: "About us"), "#", class: "slow-scroll navbar-wagon-item navbar-wagon-link navbar-space" %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn navbar-space" %>
      <!-- Sign up text -->
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

